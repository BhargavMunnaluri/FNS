#include <stdio.h>
#include <string.h>

int main() {
    char str1[100];
    char str2[100];
    char xor_result[100];
    int len, i;

    printf("Enter the first binary string: ");
    scanf("%s", str1);

    printf("Enter the second binary string: ");
    scanf("%s", str2);

    if (strlen(str1) != strlen(str2)) {
        printf("Error: The two binary strings must be of the same length.\n");
        return 1;
    }

    len = strlen(str1);

    for (i = 0; i < len; i++) {
        if (str1[i] == str2[i]) {
            xor_result[i] = '0';
        } else {
            xor_result[i] = '1';
        }
        
        if ((str1[i] != '0' && str1[i] != '1') || (str2[i] != '0' && str2[i] != '1')) {
            printf("Error: Inputs contain non-binary characters.\n");
            return 1;
        }
    }

    xor_result[len] = '\0';

    printf("\n  %s\n", str1);
    printf("XOR\n");
    printf("  %s\n", str2);
    printf("------------------\n");
    printf("= %s\n", xor_result);

    return 0;
}
