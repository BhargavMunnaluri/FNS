#include <stdio.h>

int main() {
    int decimalNum;
    int binaryNum[32];
    int i = 0;
    int j;

    printf("Enter a decimal number: ");
    scanf("%d", &decimalNum);

    if (decimalNum == 0) {
        printf("Binary equivalent: 0\n");
        return 0;
    }

    while (decimalNum > 0) {
        binaryNum[i] = decimalNum % 2;
        decimalNum = decimalNum / 2;
        i++;
    }

    printf("Binary equivalent: ");
    
    for (j = i - 1; j >= 0; j--) {
        printf("%d", binaryNum[j]);
    }

    printf("\n");
    return 0;
}
